<!DOCTYPE html>
<html>
  <head>
    <title>Spear Health</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>

    <div class='main-container'>
    <h1><%= link_to "Spear Health", root_path, class:'site-header' %> </h1> 
      <div class='navBar'>
        <div class='actual-button-container'>
          <%# link to archives (articles, patientprofiles, servivces, logs) %>
           <% if !current_admin.present? %>
          <%= button_to "Sign in", login_path,  method: :get, class: 'btn-link' %>
          <% end %>
          <br/>
          <%= button_to 'Articles', articles_path,  method: :get, class: 'btn-link' %> 
          <br/>
          <%= button_to 'Services', services_path,  method: :get, class: 'btn-link' %>
          <br/>
          <% if current_admin.present? %>
          <%= button_to "Logs", logs_path,  method: :get, class: 'btn-link' %>
          <%end%>
        </div>

        <div class='actual-button-container-b'>
        <%# link to creating new articles, services, link to admin profile %>
          <% if current_admin.present? %>
          <%= button_to "Profile", admin_path(@current_admin), method: :get,  class: 'button btn-link'%>
          <br/>
          <%= button_to "Article+", new_article_path, method: :get, class: 'button btn-link'%>
          <br/>
          <br/>
          <%=button_to "Service+", new_service_path, method: :get, class: 'button btn-link'%>
          <br/>
          <%= button_to 'Logout', logout_path, method: :delete, data: { turbo: "false", confirm: 'Are you sure you want to sign off?' }, class: 'btn btn-destroy'%>
          <% end %>
        </div>
      </div>
    <div class='container'>
      <div class='button-container' >
        <%#  the content from all the views will render here %>
        <%= yield %>
        <%#  %>
      </div>
    </div>
    </div>
  </body>

</html>
