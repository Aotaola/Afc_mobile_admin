<div>
    <div class="search-bar">
        <%= search_form_for(@query) do |f| %>
          <%= f.search_field :title_cont_any, placeholder: "Search...", class: 'search-bar-input'%>
          <%= f.submit "Search!"%>
        <% end %>
    </div>
      <% if @art.present? %>
        <div class="search-bar-results"> 
        <h4><%= pluralize(@art.count, 'Result')%></h4> 

          <% @art.order(:title).each do |article|%>
          <p>
            <%= link_to article.title, article_path(article) %>
          </p>
          <br/>
          <%end%>
        </div>
      <%end%>
    
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td>
                    <%= link_to article.title.truncate(100), article_path(article) %>
                </td>
                <td>
                    <%= article.description.truncate(100) %>
                </td>
            </tr>
        <% end %>
        
        <% if @articles.size < 10 %>
            <% (10 - @articles.size).times do %>
                <tr>
                    <td> . </td>
                    <td> . </td>
                </tr>
            <% end %>
        <% end %>
    </tbody>
</table>

      <div>
        <%= will_paginate @articles, 
          class: 'pagination', 
            previous_label: 'Previous', 
            next_label: 'Next', 
            inner_window: 5, 
            outer_window: 1,  
            page_links: true, 
            params: { controller: 'articles', action: 'index' } %>
      </div>
</div>