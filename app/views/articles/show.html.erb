<%# <div class = 'container'> %>
    
<div class="article-body">
        <h1 class="article-title"><%= @article.title %></h1>
        <h3 class="article-description"><%= @article.description %></h3>
        <div class = 'article-contents'>
            <% if @article.photo? %>
                    <%= image_tag(@article.photo.url) %>
            <% end %>
            <p><%= @article.body %></p>
        </div>
        <div class="article-author">
            <p>This article was written by <span><%= @admin.name %></span></p>
        </div>

    <div class="article-actions" >
        <% if current_admin.present? %>
            <%= link_to 'edit article', edit_article_path(@article.id), method: :get, class: "btn btn-edit" %>
            <%= button_to 'Delete', article_path(@article.id), method: :delete, data: {  turbo: "false", confirm: 'Are you sure you want to delete this article?' }, class: "btn btn-destroy" %>
        <%end%>
     </div>
</div>



