
<h3>
<table>
    <thead>
        <tr>
            <th> Title</th>
            <th> Article preview</th>
            <th> Actions </th>
        </tr>
    </thead>
    <tbody>
<% @articles.each do |article| %>
        <tr>
            <th> 
                <%=link_to article.title, article_path(article), method: :get %>
            </th>
            
            <th> 
                <%= article.body.truncate(30) %>
            </th>
            <th>
                <%= link_to 'Edit', edit_article_path(article), method: :get %>
                <%= button_to 'destroy', article_path(article), method: :delete %>
            </th>
        </tr>
    </tbody>
<%end %>
</table>
