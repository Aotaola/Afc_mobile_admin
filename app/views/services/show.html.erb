<div class="service-body">
        <h1 class="service-title"><%= @service.title %></h1>
        <h3 class="service-description"><%= @service.description %></h3>
        <%=link_to @service.url %>

    <div class="service-actions" >
        <% if current_admin.present? %>
            <%= link_to 'edit service', edit_service_path(@service.id), method: :get, class: "btn btn-edit" %>
            
            <%= button_to 'Delete', service_path(@service.id), method: :delete, data: {  turbo: "false", confirm: 'Are you sure you want to delete this article?' }, class: "btn btn-destroy" %>
        <%end%>
     </div>
</div>
